{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "chrome",
      "node",
      "webpack-env",
    ],
    "allowJs": true,
    "target": "ES2019",
    // Strict
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules"
  ],
}
